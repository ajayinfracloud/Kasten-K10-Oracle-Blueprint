# Create profile
kanctl create profile s3compliant --bucket <BucketName> --access-key <AccessKey> \
                                    --secret-key <SecretKey>               \
                                    --region US-WEST-1                                   \
                                    --namespace oracledb

# Create blueprint
kubectl -n kanister apply -f k10-backup/backup.yaml

# Create Actionset to take before backup
kanctl create actionset --action backupprehook --namespace kanister --blueprint oracle-blueprint --deployment oracledb/oracle12c --profile oracledb/s3-profile-hf

# Create Actionset to take after backup
kanctl create actionset --action backupposthook --namespace kanister --blueprint oracle-blueprint --deployment oracledb/oracle12c --profile oracledb/s3-profile-hf
