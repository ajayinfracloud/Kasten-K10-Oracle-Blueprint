# Create profile
kanctl create profile s3compliant --bucket <BucketName> --access-key <AccessKey> \
                                    --secret-key <SecretKey>               \
                                    --region US-WEST-1                                   \
                                    --namespace oracledb

# Create blueprint
kubectl -n kanister apply -f kanister-backup/oracledb-blueprint.yaml

# Create Actionset to take backup
kanctl create actionset --action backup --namespace kanister --blueprint oracle-blueprint --deployment oracledb/oracle12c --profile oracledb/s3-profile

